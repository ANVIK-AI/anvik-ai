# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# For local development with Docker:
#   DATABASE_URL="postgresql://postgres:postgres@localhost:5432/appdb?schema=public"
#   EMBEDDINGS_DATABASE_URL="postgresql://postgres:postgres@localhost:5433/embeddingsdb?schema=public"
#
# For AWS RDS PostgreSQL (production):
#   DATABASE_URL="postgresql://<username>:<password>@<rds-endpoint>:5432/appdb?schema=public&sslmode=require"
#   EMBEDDINGS_DATABASE_URL="postgresql://<username>:<password>@<rds-endpoint>:5432/embeddingsdb?schema=public&sslmode=require"
#
# Note: When using a single RDS instance, both databases are on the same host.
#       The embeddings database requires the pgvector extension to be enabled.
# =============================================================================

DATABASE_URL="postgresql://postgres:postgres@localhost:5432/appdb?schema=public"
EMBEDDINGS_DATABASE_URL="postgresql://postgres:postgres@localhost:5433/embeddingsdb?schema=public"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV="development"
PORT=4000

# Session secret (use a strong random string in production)
SESSION_SECRET="your-strong-session-secret-change-in-production"

# JWT secret for API authentication
JWT_ACCESS_SECRET="strongsecretkey"

# =============================================================================
# EXTERNAL SERVICES - AI PROVIDERS
# =============================================================================
# Gemini API (required for embeddings, optional for chat)
GEMINI_API_KEY="your-gemini-api-key"

# Groq API (optional - for Qwen, Llama, Mixtral models)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY="your-groq-api-key"

# =============================================================================
# GOOGLE OAUTH (for authentication)
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"

# =============================================================================
# ENCRYPTION SETTINGS
# =============================================================================
# Master encryption key for user data encryption (REQUIRED for data security)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# This key is used with user IDs to derive unique encryption keys per user
# WARNING: If you lose this key, all encrypted data will be unrecoverable!
ENCRYPTION_MASTER_KEY="your-64-character-hex-encryption-master-key-change-in-production"

# =============================================================================
# PRODUCTION SETTINGS (uncomment and configure for production)
# =============================================================================
# FRONTEND_URL="https://your-frontend-domain.com"
# COOKIE_DOMAIN="your-domain.com"